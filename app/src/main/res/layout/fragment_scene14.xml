<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rocketBackgroundBlue"
    app:layoutDescription="@xml/ml_scene_14"
    tools:context=".fragments.Scene14Fragment">

    <ImageView
        android:id="@+id/scene14Rocket"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/rocket_image" />

    <Button
        android:id="@+id/scene14Button"
        style="@style/PrimaryButtonStyle.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's go"
        android:visibility="invisible"
        android:textColor="@color/rocketBackgroundBlue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/scene14Congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:text="Congratulations !"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/scene14SecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="You're great animator. Let's go out there to explore more cool features of motion layout. :) "
        android:visibility="invisible" />


</androidx.constraintlayout.motion.widget.MotionLayout>